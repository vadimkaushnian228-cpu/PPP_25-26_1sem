N = 5
M = 10
hall = []
for i in range(N):
    row = []
    for j in range(M):
        row.append(0)
    hall.append(row)
hall[1][3] = 1
hall[1][4] = 1
hall[3][0] = 1
def book_seats(hall, k):
    for r in range(len(hall)):
        cnt = 0
        for s in range(len(hall[r])):
            if hall[r][s] == 0:
                cnt += 1
            else:
                cnt = 0
            if cnt == k:
                start = s - k + 1
                for x in range(start, start + k):
                    hall[r][x] = 1
                return r, start
    return None
res = book_seats(hall, 3)
if res:
    print("Нашёл места в ряду", res[0] + 1, ", начиная с места", res[1] + 1)
else:
    print("Ну всё, мест нет вообще.")
for r in hall:
    print(r)
